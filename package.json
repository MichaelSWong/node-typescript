{
  "name": "node-typescript",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "clean-client": "rimraf client/build",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "prettier --config .prettierrc.json --write src/**/*.ts",
    "start-client": "cd ./client && yarn run build",
    "tsc": "tsc",
    "build": "npm-run-all clean clean-client lint tsc start-client copy-assets",
    "start": "nodemon",
    "test": "jest"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.13",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.1.1",
    "pretty-quick": "^3.0.2",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "~3.7.2"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
